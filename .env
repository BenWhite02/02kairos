# =============================================================================
# KAIROS FRONTEND - ENVIRONMENT CONFIGURATION
# =============================================================================
# Author: Sankhadeep Banerjee
# Project: Kairos - Marketing Decisioning Solution
# File: .env
# =============================================================================

# Application Configuration
VITE_APP_NAME=Kairos
VITE_APP_DESCRIPTION=Marketing Decisioning Solution - The Perfect Moment Delivery
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development

# API Configuration
VITE_API_BASE_URL=http://localhost:8080/api/v1
VITE_API_TIMEOUT=30000
VITE_ENABLE_API_LOGGING=true

# Hades Backend Integration
VITE_HADES_API_URL=http://localhost:8080
VITE_HADES_WS_URL=ws://localhost:8080/ws
VITE_ENABLE_REALTIME_UPDATES=true

# Theme Configuration
VITE_DEFAULT_THEME=kairos-dark
VITE_ENABLE_THEME_SWITCHER=true
VITE_ENABLE_CUSTOM_THEMES=true
VITE_THEME_PERSISTENCE=true

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_DEBUGGING=true
VITE_ENABLE_MOCK_DATA=true
VITE_ENABLE_STORYBOOK=true
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_ERROR_REPORTING=true

# Development Configuration
VITE_DEV_PORT=5173
VITE_DEV_HOST=localhost
VITE_DEV_OPEN=true
VITE_DEV_HTTPS=false

# Authentication Configuration
VITE_AUTH_TOKEN_KEY=kairos-auth-token
VITE_AUTH_USER_KEY=kairos-user-data
VITE_AUTH_REFRESH_THRESHOLD=300000
VITE_SESSION_TIMEOUT=3600000

# Performance Configuration
VITE_ENABLE_LAZY_LOADING=true
VITE_ENABLE_CODE_SPLITTING=true
VITE_BUNDLE_ANALYZER=false
VITE_PERFORMANCE_BUDGET=500

# Security Configuration
VITE_ENABLE_CSP=true
VITE_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:8080
VITE_ENABLE_CORS=true

# Monitoring & Analytics
VITE_SENTRY_DSN=
VITE_GOOGLE_ANALYTICS_ID=
VITE_HOTJAR_ID=
VITE_MIXPANEL_TOKEN=

# Notification Configuration
VITE_ENABLE_PUSH_NOTIFICATIONS=true
VITE_VAPID_PUBLIC_KEY=
VITE_NOTIFICATION_TIMEOUT=5000

# UI Configuration
VITE_ANIMATION_DURATION=300
VITE_SIDEBAR_DEFAULT_COLLAPSED=false
VITE_TOAST_POSITION=top-right
VITE_MODAL_ANIMATION=true

# Data Configuration
VITE_PAGINATION_DEFAULT_SIZE=10
VITE_SEARCH_DEBOUNCE=300
VITE_CACHE_TTL=300000
VITE_OFFLINE_SUPPORT=true

# Experimental Features
VITE_ENABLE_WEB_WORKERS=false
VITE_ENABLE_SERVICE_WORKER=false
VITE_ENABLE_PWA=false
VITE_ENABLE_VOICE_CONTROL=false